!!! 5

%html{lang: 'en'}
	%head
		%meta{charset: 'UTF-8'}
		%title= [ title, 'cae.me.uk' ].compact.join(' - ')
		%meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}

		// avoiding using this for now, it doesn't get updated in PJAX requests
		// which could lead to issues if I try to use it later. Needs a think..
		//= csrf_metatag

		%link{href: '/dist/Semantic-2.1.8/semantic.min.css', rel: 'stylesheet'}
		= assets [ :css, :app ], media: 'screen'

		//%script{src: '/dist/Semantic-2.1.8/semantic.min.js', type: 'text/javascript'}
		%script{src: '/dist/jquery-2.2.0.min.js', type: 'text/javascript'}
		%script{src: '/dist/jquery.pjax-1.9.6.js', type: 'text/javascript'}
		%script{src: '/dist/smart-time-ago-0.1.5.js', type: 'text/javascript'}
		%script{src: 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js', type: 'text/javascript'}

		= assets [ :js, :app ]

	%body
		%nav.ui.inverted.secondary.menu.site-menu
			.ui.container
				%a.header.item{href: '/'}
					cae.me.uk

				%a.link.item{href: '/p/contact'} Contact
				%a.link.item{href: '/p/cv'} CV
				%a.link.item{href: '/p/projects'} Projects

				.right.menu
					- if user.logged_in?
						%a.link.item{href: '/account/logout'}= user.email
					- else
						%a.link.item{href: '/account/login'}
							%i.sign.in.icon

		%main.ui.container
			= yield

		%footer
			%p
				Powered by
				%a{href: 'http://github.com/celsworth/webcms'} WebCMS.

			%p
				Except where otherwise noted, content on this site
				is licensed under
				%a{href: 'http://creativecommons.org/licenses/by-nc-nd/4.0/'}
					CC Attribution-NonCommercial-NoDerivatives
					4.0 International.

			%p
				Copyright &copy;
				2014-#{Time.now.year} Chris Elsworth.
				Some Rights Reserved.

		:javascript
			$('body').timeago();
