- if user.is_admin?
	%a.ui.icon.button.red{style: 'position: fixed; top: 10px; right: 10px', href: "/p/#{@page.name}/edit"}
		%i.cogs.icon

- title @pv&.display_title

.md~ @pv&.render_html

- if @pv
	%p.last-modified
		Modified
		%time.js-timeago{title: @pv.created_at, datetime: @pv.created_at.iso8601}
			= @pv.created_at

		- if @page.tags.any?
			= '[tags: %s]' % @page.tags.map{|tag| tag.name }.join(', ')
